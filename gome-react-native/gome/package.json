{
  "name": "gome",
  "version": "0.0.1",
  "private": true,
  "watch": {
    "images": {
      "patterns": [
        "App"
      ],
      "extensions": "jpg,jpeg,gif,svg"
    }
  },
  "scripts": {
    "clean": "rm -rf ./artifacts",
    "images": "node node_modules/.bin/copyfiles -u 1 ./App/**/*.gif ./App/**/*.png ./App/**/*.svg ./App/**/*.jpg ./App/**/*.jpeg ./artifacts",
    "build": "(cd android/ && ./gradlew assembleDebug)",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "bundle-android": "react-native bundle --platform android --dev false --entry-file index.android.js --bundle-output android/app/src/main/assets/index.android.bundle --sourcemap-output android/app/src/main/assets/index.android.map --assets-dest android/app/src/main/res/",
    "prestart": "npm run clean",
    "postcompile": "npm run images",
    "start:react-native": "node node_modules/react-native/local-cli/cli.js start",
    "watch": "node node_modules/.bin/parallelshell 'npm run bundle-android' 'npm-watch'",
    "start": "node node_modules/.bin/parallelshell 'npm run start:react-native' 'npm run watch'"  
  },
  "dependencies": {
    "babel": "^6.5.2",
    "babel-polyfill": "^6.13.0",
    "react": "^15.3.2",
    "react-native": "0.33.0",
    "react-native-router-flux": "^3.35.0",
    "react-native-tcp": "^2.0.3",
    "react-native-web": "0.0.45"
  },
  "devDependencies": {
    "copyfiles": "^1.0.0",
    "npm-watch": "^0.1.6",
    "parallelshell": "^2.0.0",
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0"
  },
  "browser": {
    "net": "react-native-tcp"
  }
}
