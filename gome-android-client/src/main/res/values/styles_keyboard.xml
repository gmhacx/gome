<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="keyboard__action_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/base__padding_1</item>
        <item name="android:paddingTop">@dimen/base__padding_2</item>
        <item name="android:paddingRight">@dimen/base__padding_1</item>
        <item name="android:paddingBottom">@dimen/base__padding_2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/keyboard__action</item>
        <item name="android:textColor">@color/base__text_white_0</item>
    </style>

    <style name="keyboard__dialog_action_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/base__padding_1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/base__dialog_action</item>
        <item name="android:textColor">@color/base__text_dark_2</item>
        <item name="android:background">@drawable/base__button_transparent_dark</item>
    </style>

</resources>